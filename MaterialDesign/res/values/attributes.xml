<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomAttributes">

        <!-- Color of ripple animation -->
        <attr name="mdl_rippleColor" format="color|reference" />
        <!-- Speed of ripple animation -->
        <attr name="mdl_rippleSpeed" format="float" />
        <!-- indicate if the slider must show number indicator -->
        <attr name="mdl_showNumberIndicator" format="boolean" />
        <!-- in mdl_progress view indicate mdl_max mdl_value of mdl_progress -->
        <attr name="mdl_max" format="integer" />
        <!-- in mdl_progress view indicate mdl_min mdl_value of mdl_progress -->
        <attr name="mdl_min" format="integer" />
        <!-- in mdl_progress view indicate mdl_value of mdl_progress -->
        <attr name="mdl_value" format="integer" />
        <!-- in mdl_progress view indicate mdl_value of mdl_progress -->
        <attr name="mdl_progress" format="integer" />
        <attr name="mdl_ringWidth" format="dimension" />
        <!-- in switche's view indicate state of view -->
        <attr name="mdl_check" format="boolean" />
        <attr name="mdl_checkBoxSize" format="dimension" />
        <attr name="mdl_thumbSize" format="dimension" />
        <!-- in float button indicate icon resource -->
        <attr name="mdl_iconDrawable" format="integer" />
        <!-- in button whitch contains drawable indicate icon resource -->
        <attr name="mdl_iconSize" format="dimension" />
        <!-- in float button indicate if must start with animation -->
        <attr name="mdl_animate" format="boolean" />
        <!-- set the border of the ripple frame -->
        <attr name="mdl_rippleBorderRadius" format="float" />
        <!-- if true, delays calls to OnClickListeners until ripple effect ends -->
        <attr name="mdl_clickAfterRipple" format="boolean" />
    </declare-styleable>

</resources>
