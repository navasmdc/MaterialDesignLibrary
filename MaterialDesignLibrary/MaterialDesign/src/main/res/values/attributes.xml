<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomAttributes">

        <!-- Color of ripple animation -->
        <attr name="MLrippleColor" format="color|reference" />
        <!-- Speed of ripple animation -->
        <attr name="MLrippleSpeed" format="float" />
        <!-- indicate if the slider must show number indicator -->
        <attr name="MLshowNumberIndicator" format="boolean" />
        <!-- in progress view indicate max value of progress -->
        <attr name="MLmax" format="integer" />
        <!-- in progress view indicate min value of progress -->
        <attr name="MLmin" format="integer" />
        <!-- in progress view indicate value of progress -->
        <attr name="MLvalue" format="integer" />
        <!-- in progress view indicate value of progress -->
        <attr name="MLprogress" format="integer" />
        <attr name="MLringWidth" format="dimension" />
        <!-- in switche's view indicate state of view -->
        <attr name="MLchecked" format="boolean" />
        <!-- in float button indicate icon resource -->
        <attr name="MLiconDrawable" format="integer" />
        <!-- in float button indicate if must start with animation -->
        <attr name="MLanimated" format="boolean" />
        <!-- set the border of the ripple frame -->
        <attr name="MLrippleBorderRadius" format="float" />
        <!-- if true, delays calls to OnClickListeners until ripple effect ends -->
        <attr name="MLclickAfterRipple" format="boolean" />
    </declare-styleable>

</resources>
